@model ITInventory.Models.Entities.Location


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Location</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.LocationType, htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.LocationType, "Select One", htmlAttributes: new { @class = "form-control", @id = "locationtypeDD" })
                @Html.ValidationMessageFor(model => model.LocationType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LocationTypeValue, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LocationTypeValue, new { htmlAttributes = new { @class = "form-control" , @id ="locationtxt" } })
                @Html.ValidationMessageFor(model => model.LocationTypeValue, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Create" style="margin-top:2%" class="btn btn-default" onclick="Clocation('@Url.Action("CreateLocation", "Devices")'); return false;" />
                <script type='text/javascript'>
                    function Clocation(target) {
                        alert("New Location Has been Added.");
                        $.post(target, { LocationType: $('#locationtypeDD  option:selected').val(), LocationTypeValue: $('#locationtxt').val() });
                    }
                </script>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
